.PHONY: help traefik ldap destroy
.DEFAULT_GOAL := help

# Start traefik with self-signed certificates who are generated by mkcert
traefik:
	@docker compose -f traefik/self-signed/compose.yml -p traefik up -d
	@docker compose -p traefik restart

logs-traefik:
	@docker compose -f traefik/self-signed/compose.yml -p traefik logs -f

# Start ldap with bitnami image
ldap:
	@docker compose -f ldap/bitnami.yml -p ldap up -d
	@docker compose -p ldap restart

logs-ldap:
	@docker compose -f ldap/bitnami.yml -p ldap logs -f

# Destroy all stacks
destroy:
	@docker compose -f traefik/self-signed/compose.yml -p traefik down
	@docker compose -f ldap/bitnami.yml -p ldap down

# Show help
help:
	@echo ""
	@echo "Usage:"
	@echo " make [target]"
	@echo ""
	@echo "Targets:"
	@awk '/^[a-zA-Z\-_0-9]+:/ \
	{ \
		helpMessage = match(lastLine, /^# (.*)/); \
		if (helpMessage) { \
			helpCommand = substr($$1, 0, index($$1, ":")-1); \
			helpMessage = substr(lastLine, RSTART + 2, RLENGTH); \
			printf "\033[36m%-22s\033[0m %s\n", helpCommand,helpMessage; \
		} \
	} { lastLine = $$0 }' $(MAKEFILE_LIST)
